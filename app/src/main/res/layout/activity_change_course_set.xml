<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context=".ui.activity.sub.admin.ModifiedStudent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@color/colorPrimary"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="修改/删除课程信息"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="讲师名"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_lecturer_name"
                android:layout_width="300dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_round_white"
                android:gravity="fill"
                android:paddingLeft="20dp"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="课程名"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_course_name"
                android:layout_width="300dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_round_white"
                android:gravity="fill"
                android:paddingLeft="20dp"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="时间"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_course_time"
                android:layout_width="300dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_round_white"

                android:gravity="fill"
                android:paddingLeft="20dp"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="季度"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_course_period"
                android:layout_width="300dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_round_white"

                android:gravity="fill"
                android:paddingLeft="20dp"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_change_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:text="修改"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/button_delete_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:text="删除"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>