<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context=".ui.activity.sub.admin.ModifiedStudent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@color/colorPrimary"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="删除/更改信息页面"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="账号"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/edit_xuehao_d"
                android:layout_width="300dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_round_white"
            
                android:gravity="fill"
                android:paddingLeft="20dp"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="姓名"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/edit_xingming_d"
                android:layout_width="300dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_round_white"
            
                android:gravity="fill"
                android:paddingLeft="20dp"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="性别"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/edit_sex_d"
                android:layout_width="300dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_round_white"
            
                android:gravity="fill"
                android:paddingLeft="20dp"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="年龄"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/edit_age_d"
                android:layout_width="300dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_round_white"
            
                android:gravity="fill"
                android:paddingLeft="20dp"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="部门"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/edit_department_d"
                android:layout_width="300dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_round_white"
            
                android:gravity="fill"
                android:paddingLeft="20dp"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="电话"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/edit_phone_d"
                android:layout_width="300dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_round_white"
            
                android:gravity="fill"
                android:paddingLeft="20dp"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="部门"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/edit_company_d"
                android:layout_width="300dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_round_white"
            
                android:gravity="fill"
                android:paddingLeft="20dp"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:text="保存"
                android:textColor="@color/white"
                />
            <Button
                android:id="@+id/button_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:text="删除"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>